<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="bluefish" _name="Bluefish" version="1.0">
  <author>Domokos Endre JÃ¡nos</author>
  <_description>Color scheme based on Bluefish Editor</_description>

  <style name="text" foreground="#0000ff" background="#ffffff"/>
  <style name="selection" foreground="#ffffff" background="#0000ff"/>
  <style name="cursor" foreground="#000000"/>
  <style name="current-line" background="#dddddd"/>
  <style name="line-numbers" foreground="#000000" background="#babdb6"/>
  <style name="draw-spaces" foreground="#babdb6"/>

  <style name="bracket-match" foreground="#ffffff" background="#b71311"/>
  <style name="bracket-mismatch" foreground="#ffffff" background="#b71311"/>

  <style name="def:comment" foreground="#ff8000"/>
  <style name="def:sheband" foreground="#babdb6"/>
  <style name="def:doc-comment-element" italic="true"/>

  <style name="def:string" foreground="#009900" bold="false"/>
  <style name="def:special-char" foreground="#babdb6" bold="true"/>
  <style name="def:special-constant" foreground="#0000ff" bold="true"/>
  <style name="def:floating-point" foreground="#d00000"/>

  <style name="def:identifier" foreground="#990026" bold="true"/>
  <style name="def:statement" foreground="#000000" bold="true"/>
  <style name="def:type" foreground="#000000" bold="true"/> 

  <style name="def:keyword" foreground="#000000" bold="true"/>
  <style name="def:preprocessor" foreground="#0000ff" bold="true"/>
  <style name="def:error" foreground="#0000ff" background="#white" bold="false"/>
  <style name="def:underlined" italic="true" underline="true"/>

</style-scheme>
